<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.ch3d.ifttt.batterywatchdog"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BATTERY_STATS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".BatteryLevelReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter android:priority="900">
                <action android:name="android.intent.action.BATTERY_LOW" />
            </intent-filter>
        </receiver>

        <provider
            android:name=".provider.RulesContentProvider"
            android:authorities="com.ch3d.ifttt"
            android:exported="true"
            android:readPermission="com.ch3d.ifttt.provider.permission.READ_RULES">
        </provider>

        <service
            android:name=".ReportIntentService"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>